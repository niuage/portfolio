<% categories = [
  "Full website",
  "Development",
  "Design",
  "Feature",
  "Personal",
  "Work"
  ] %>

<% globes = [
  "design",
  "code",
  "feature"
] %>

<div class="project clearfix" id="<%= project.id %>">
  <div class="clearfix">
    <div class="medium-3 columns">
      <div class="project-logo">
        <%= image_tag "logos/#{project.image_url}" %>
      </div>
    </div>

    <div class="medium-6 columns">
      <section class="about">
        <h2><%= project.title %></h2>
        <p><%=raw project.subtitle %></p>

        <div class="row">
          <div class="row">
            <div class="medium-4 columns">
              <%= link_to project.button_copy, "#", class: "button" %>
            </div>
            <div class="medium-4 columns">
              <div class="category">
                <div class="globe">
                  <span class="<%= cycle(*globes, name: :globe) %>"></span>
                </div>

                <%= cycle(*categories, name: :category) %>

              </div>
            </div>
            <div class="medium-4 columns">
            </div>
          </div>
        </div>
      </section>
    </div>

    <div class="medium-3 columns">
      <%= image_tag "projects/#{project.image_url}", class: "triangle" %>
    </div>
  </div>

  <div class="huge-bg">
    <p><%= project.title %></p>
  </div>
</div>
