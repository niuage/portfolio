<header id="home-header" class="header">
  <%= render "top_nav" %>

  <div id="project-header-image" class="purple-fox">
    <%#= image_tag "purple_fox.svg" %>
    <%= image_tag "knight3.png" %>
  </div>

      <div class="content-middle">
        <div class="content-cell">
  <div class="row">
    <div class="medium-12 columns text-center">
          <h3 class="serif all-caps">The adventures of</h3>
          <h1>Robin Boutros</h1>
        </div>
      </div>
    </div>
  </div>
</header>

<section id="intro" class="clearfix">
  <div class="medium-3 columns">
    <h3 class="light-text">Bonjour!</h3>
  </div>
  <!-- medium-push-3 -->
  <div class="medium-6  columns">
    <h3>I'm Robin, a web developer building websites for a living by day, and designing them for fun by night.</h3>

    <h3>
      This is a collection of my favorite work.
    </h3>
  </div>
  <div class="columns"></div>

  <div class="huge-bg">
    <p>Hello.</p>
  </div>
</section>

<% if true %>
<%= render "categories/category_list", categories: Category.all, legend: true %>
<% end %>

<section id="content" class="clearfix">
  <% if false %>
    <%= render "grid" %>
  <% end %>

  <div id="content-wrapper">
    <% @projects.each do |project| %>
    <!-- <div class="medium-6 columns"> -->
      <%= render "project", project: project %>
    <!-- </div> -->
    <% end %>
  </div>
</section>
