<a class="project clearfix" href="<%= project_path(project) %>" id="<%= project.id %>">
  <div class="clearfix">
    <div class="medium-3 columns">
      <div class="project-logo">
        <%= image_tag project.logo_url %>
      </div>
    </div>

    <div class="medium-6 columns">
      <section class="about">
        <h2><%= project.title %></h2>
        <p><%=raw project.subtitle %></p>

        <ul class="no-bullet footer clearfix">
          <li>
            <span class="button"><%= project.button %></span>
          </li>
          <li>
            <%= render project.categories %>
          </li>
        </ul>
      </section>
    </div>

    <div class="medium-3 columns">
      <%= image_tag project.image_url, class: "triangle" %>
    </div>
  </div>

  <div class="huge-bg">
    <p><%= project.title %></p>
  </div>
</a>
